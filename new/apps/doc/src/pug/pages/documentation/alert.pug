append config
    -title = "Alerts"
    -description = "Alert component for feedback."
    -ogUrl = "/documentation/alert.html"
    -template = 2
block main
    .SnGrid.col-gap.row-gap.l-grid-2
        +codeBox2(
            'Basic',
            '',
            [
                {
                    languaje: 'html',
                    code: '<div class="SnAlert">\n    <span class="SnIcon-question SnAlert-icon"></span>\n    <div class="SnAlert-content">\n        <strong>This is super informative</strong>\n        <div>You can tell by how pretty the alert is</div>\n    </div>\n</div>\n<div class="SnAlert success">\n    <span class="SnIcon-success SnAlert-icon"></span>\n    <div class="SnAlert-content">\n        <strong>This is super informative</strong>\n        <div>You can tell by how pretty the alert is</div>\n    </div>\n</div>\n<div class="SnAlert info">\n    <span class="SnIcon-info SnAlert-icon"></span>\n    <div class="SnAlert-content">\n        <strong>This is super informative</strong>\n        <div>You can tell by how pretty the alert is</div>\n    </div>\n</div>\n<div class="SnAlert warning">\n    <span class="SnIcon-warning SnAlert-icon"></span>\n    <div class="SnAlert-content">\n        <strong>This is super informative</strong>\n        <div>You can tell by how pretty the alert is</div>\n    </div>\n</div>\n<div class="SnAlert danger">\n    <span class="SnIcon-danger SnAlert-icon"></span>\n    <div class="SnAlert-content">\n        <strong>This is super informative</strong>\n        <div>You can tell by how pretty the alert is.</div>\n    </div>\n</div>'
                }
            ]
        )
            .SnAlert
                span.SnIcon-question.SnAlert-icon
                .SnAlert-content
                    strong This is super informative
                    div You can tell by how pretty the alert is
            .SnAlert.success
                span.SnIcon-success.SnAlert-icon
                .SnAlert-content
                    strong This is super informative
                    div You can tell by how pretty the alert is
            .SnAlert.info
                span.SnIcon-info.SnAlert-icon
                .SnAlert-content
                    strong This is super informative
                    div You can tell by how pretty the alert is
            .SnAlert.warning
                span.SnIcon-warning.SnAlert-icon
                .SnAlert-content
                    strong This is super informative
                    div You can tell by how pretty the alert is
            .SnAlert.danger
                span.SnIcon-danger.SnAlert-icon
                .SnAlert-content
                    strong This is super informative
                    div You can tell by how pretty the alert is
        +codeBox2(
            'Close',
            'Close icon',
            [
                {
                    languaje: 'html',
                    code: '<div class="SnAlert">\n    <span class="SnIcon-question SnAlert-icon"></span>\n    <div class="SnAlert-content">message in alert</div>\n    <div class="SnAlert-close">\n        <i class="SnIcon-close"></i>\n    </div>\n</div>\n\n<div class="SnAlert success">\n    <span class="SnIcon-success SnAlert-icon"></span>\n    <div class="SnAlert-content">message in alert</div>\n    <div class="SnAlert-close">\n        <i class="SnIcon-close"></i>\n    </div>\n</div>\n\n<div class="SnAlert info">\n    <span class="SnIcon-info SnAlert-icon"></span>\n    <div class="SnAlert-content">message in alert</div>\n    <div class="SnAlert-close">\n        <i class="SnIcon-close"></i>\n    </div>\n</div>\n\n<div class="SnAlert warning">\n    <span class="SnIcon-warning SnAlert-icon"></span>\n    <div class="SnAlert-content">message in alert</div>\n    <div class="SnAlert-close">\n        <i class="SnIcon-close"></i>\n    </div>\n</div>\n\n<div class="SnAlert danger">\n    <span class="SnIcon-danger SnAlert-icon"></span>\n    <div class="SnAlert-content">message in alert</div>\n    <div class="SnAlert-close">\n        <i class="SnIcon-close"></i>\n    </div>\n</div>'
                }
            ]
        )
            .SnAlert
                span.SnIcon-question.SnAlert-icon
                .SnAlert-content message in alert
                .SnAlert-close
                    i.SnIcon-close
            .SnAlert.success
                span.SnIcon-success.SnAlert-icon
                .SnAlert-content message in alert
                .SnAlert-close
                    i.SnIcon-close
            .SnAlert.info
                span.SnIcon-info.SnAlert-icon
                | message in alert
                .SnAlert-close
                    i.SnIcon-close
            .SnAlert.warning
                span.SnIcon-warning.SnAlert-icon
                | message in alert
                .SnAlert-close
                    i.SnIcon-close
            .SnAlert.danger
                span.SnIcon-danger.SnAlert-icon
                | message in alert
                .SnAlert-close
                    i.SnIcon-close
    h2 API
    .SnTable-wrapper
        table.SnTable.DocApiTable
            thead
                tr
                    th Property
                    th Class
            tbody
                tr
                    td Alert
                    td
                        code .SnAlert
                tr
                    td Color
