            'Input group examples',
            '<div class="SnControlGroup">\n    <div class="SnControlGroup-input">\n        <select class="SnForm-control">\n            <option value="1">Producto</option>\n            <option value="2">Category</option>\n        </select>\n    </div>\n    <div class="SnControl-wrapper SnControlGroup-input">\n        <input type="search" placeholder="Search..." class="SnForm-control SnControl">\n        <div class="SnControl-suffix">\n            <i class="icon-search"></i>\n        </div>\n    </div>\n</div>\n<div class="SnControlGroup">\n    <div class="SnControlGroup-prepend">\n        <button type="button" class="SnBtn primary icon">\n            <i class="icon-clone"></i>\n        </button>\n    </div>\n    <div class="SnControlGroup-input">\n        <input type="search" placeholder="Copy" class="SnForm-control">\n    </div>\n</div>\n<div class="SnControlGroup">\n    <div class="SnControlGroup-input">\n        <input type="search" placeholder="Search..." class="SnForm-control">\n    </div>\n    <div class="SnControlGroup-append">\n        <button type="button" class="SnBtn primary icon">\n            <i class="icon-search"></i>\n        </button>\n    </div>\n</div>\n<div class="SnControlGroup">\n    <div class="SnControlGroup-prepend">\n        <button type="button" class="SnBtn primary icon">\n            <i class="icon-clone"></i>\n        </button>\n    </div>\n    <div class="SnControl-wrapper SnControlGroup-input">\n        <div class="SnControl-prefix">\n            <i class="icon-server"></i>\n        </div>\n        <input type="search" placeholder="Server Search..." class="SnForm-control SnControl">\n    </div>\n    <div class="SnControlGroup-append">\n        <button type="button" class="SnBtn primary icon">\n            <i class="icon-search"></i>\n        </button>\n    </div>\n</div>'
