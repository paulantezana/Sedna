                .SnControlGroup-prepend
                    .SnBtn.primary.icon
                        i.icon-clone
                .SnControlGroup-input
                    input(type="search" placeholder="Copy").SnForm-control
            .SnControlGroup
                .SnControlGroup-input
                    input(type="search" placeholder="Search...").SnForm-control
                .SnControlGroup-append
                    .SnBtn.primary.icon
                        i.icon-search
            .SnControlGroup
                .SnControlGroup-prepend
                    .SnBtn.primary.icon
                        i.icon-clone
                .SnControl-wrapper.SnControlGroup-input
                    .SnControl-prefix
                        i.icon-server
                    input(type="search" placeholder="Server Search...").SnForm-control.SnControl
                .SnControlGroup-append
                    .SnBtn.primary.icon
                        i.icon-search
        +codeBox(
            'Disabled and readonly',
            'Disabled and readonly',
            '<input type="text" disabled value="disabled" class="SnForm-control">\n<input type="text" readonly value="readonly" class="SnForm-control">'
