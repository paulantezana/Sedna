block main
    section.SnMb-16
        h2 Top Navigation
        p Horizontal top navigation menu.
        .DocExample
            ul.SnMenu#PrimaryMenu
                li: a(href="") Home
                li: a(href="") Components
                li: a(href="") Mixin
                li: a(href="") Vars
