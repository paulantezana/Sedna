            code.
                import { SnMenu } from 'sedna/bin/script/menu';

                SnMenu({
                    menuId: 'PrimaryMenu',
                    toggleButtonID: 'PrimaryMenu-toggle',
                    contextId = "Site",
                    toggleClass: 'PrimaryMenu-is-show',
                    parentClose: true,
                    menuCloseID: 'PrimaryMenu-close',
                });
