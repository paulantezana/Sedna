        div#dataTable
        script.
            window.onload = function(e){
                new SnTable({
                    elementId: 'dataTable',
                    entity: 'sedna',
                    url: '',
                    //- actions: appMenuActions,
                    columns: [
                        {
                            title: 'Email',
                            field: 'email',
                            filterable: true,
                            sortable: true,
                        },
                        {
                            title: 'Name',
                            field: 'name',
                            filterable: true,
                            sortable: true,
                        },
                        {
                            title: 'Phone',
                            field: 'phone',
                            filterable: true,
                            sortable: true,
                        },
                        {
                            title: 'User name',
                            field: 'username',
                            filterable: true,
                            sortable: true,
                        },
                        {
                            title: 'Web site',
                            field: 'website',
                            filterable: true,
                            sortable: true,
                        },
                    ],
                    data: async (content) => {
                        console.log(content, 'CONTENT_REQUEST');
                        const response = await fetch('https://jsonplaceholder.typicode.com/users', {
                            method: 'GET',
                        });
                        const responseJson = await response.json();
                        return {
                            data: responseJson
                        };
                    },
                    onSelectChange: (that) => {

                    }
                })
            }

