extends ../../config/template
append config
    -title = "Icons"
    -description = "Icon."
    -ogUrl = "/index.html"
    -template = 2
block main
    .SnGrid.col-gap.row-gap.l-grid-2
        +codeBox(
            'Icons svg', 
            'set of icons used in sedna notifications',
            '<div class="SnIcon-info"></div>\n<div class="SnIcon-question"></div>\n<div class="SnIcon-success"></div>\n<div class="SnIcon-error"></div>'
        )
            .SnGrid.col-gap.s-grid-5(style="width: 100%")
                .SnIcon-info
                .SnIcon-question
                .SnIcon-success
                .SnIcon-warning
                .SnIcon-error
            style(type="text/css").
                .CodeBox [class*="SnIcon-"] {
                    font-size: 1.3rem;
                }