extends ../../config/template
append config
    -title = "Forms"
    -description = "Form is used to collect, validate, and submit the user input, usually contains various form items including checkbox, radio, input, select, and etc."
    -ogUrl = "/documentation/form.html"
    -template = 2
block main
    .SnGrid.col-gap.row-gap.l-grid-2
        +codeBox(
            'Login Form', 
            'Normal login form which can contain more elements.', 
            '<form class="SnForm" action="" method="post">\n    <div class="SnForm-item required">\n        <label class="SnForm-label" for="userName">User Name</label>\n        <input class="SnForm-control" id="userName" type="text" name="userName" required="">\n    </div>\n    <div class="SnForm-item required">\n        <label class="SnForm-label" for="password">Password</label>\n        <div class="SnInput-wrapper">\n            <input class="SnForm-control" id="password" type="password" name="password" required="">\n            <div class="SnInput-suffix  togglePassword">\n                <svg viewBox="64 64 896 896" focusable="false" class="" data-icon="eye-invisible" width="1em" height="1em" fill="currentColor" aria-hidden="true">\n                    <path\n                        d="M942.2 486.2Q889.47 375.11 816.7 305l-50.88 50.88C807.31 395.53 843.45 447.4 874.7 512 791.5 684.2 673.4 766 512 766q-72.67 0-133.87-22.38L323 798.75Q408 838 512 838q288.3 0 430.2-300.3a60.29 60.29 0 0 0 0-51.5zm-63.57-320.64L836 122.88a8 8 0 0 0-11.32 0L715.31 232.2Q624.86 186 512 186q-288.3 0-430.2 300.3a60.3 60.3 0 0 0 0 51.5q56.69 119.4 136.5 191.41L112.48 835a8 8 0 0 0 0 11.31L155.17 889a8 8 0 0 0 11.31 0l712.15-712.12a8 8 0 0 0 0-11.32zM149.3 512C232.6 339.8 350.7 258 512 258c54.54 0 104.13 9.36 149.12 28.39l-70.3 70.3a176 176 0 0 0-238.13 238.13l-83.42 83.42C223.1 637.49 183.3 582.28 149.3 512zm246.7 0a112.11 112.11 0 0 1 146.2-106.69L401.31 546.2A112 112 0 0 1 396 512z">\n                    </path>\n                    <path\n                        d="M508 624c-3.46 0-6.87-.16-10.25-.47l-52.82 52.82a176.09 176.09 0 0 0 227.42-227.42l-52.82 52.82c.31 3.38.47 6.79.47 10.25a111.94 111.94 0 0 1-112 112z">\n                    </path>\n                </svg>\n            </div>\n        </div>\n    </div>\n    <div class="SnBtn block primary">Login</div>\n</form>'
        )
            form(action="" method="post").SnForm
                .SnForm-item.required
                    label(for="userName").SnForm-label User Name
                    input#userName(type="text" name="userName" required).SnForm-control
                .SnForm-item.required
                    label(for="password").SnForm-label Password
                    .SnControl-wrapper
                        input#password(type="password" name="password" required).SnForm-control.SnControl
                        .SnControl-suffix.togglePassword
                            <svg viewBox="64 64 896 896" focusable="false" class="" data-icon="eye-invisible" width="1em" height="1em" fill="currentColor" aria-hidden="true"><path d="M942.2 486.2Q889.47 375.11 816.7 305l-50.88 50.88C807.31 395.53 843.45 447.4 874.7 512 791.5 684.2 673.4 766 512 766q-72.67 0-133.87-22.38L323 798.75Q408 838 512 838q288.3 0 430.2-300.3a60.29 60.29 0 0 0 0-51.5zm-63.57-320.64L836 122.88a8 8 0 0 0-11.32 0L715.31 232.2Q624.86 186 512 186q-288.3 0-430.2 300.3a60.3 60.3 0 0 0 0 51.5q56.69 119.4 136.5 191.41L112.48 835a8 8 0 0 0 0 11.31L155.17 889a8 8 0 0 0 11.31 0l712.15-712.12a8 8 0 0 0 0-11.32zM149.3 512C232.6 339.8 350.7 258 512 258c54.54 0 104.13 9.36 149.12 28.39l-70.3 70.3a176 176 0 0 0-238.13 238.13l-83.42 83.42C223.1 637.49 183.3 582.28 149.3 512zm246.7 0a112.11 112.11 0 0 1 146.2-106.69L401.31 546.2A112 112 0 0 1 396 512z"></path><path d="M508 624c-3.46 0-6.87-.16-10.25-.47l-52.82 52.82a176.09 176.09 0 0 0 227.42-227.42l-52.82 52.82c.31 3.38.47 6.79.47 10.25a111.94 111.94 0 0 1-112 112z"></path></svg>
                .SnBtn.block.primary Login
        +codeBox(
            'Registration', 
            'Fill in this form to create a new account for you.', 
            '<form class="SnForm horizontal" action="" method="post">\n    <div class="SnForm-item required">\n        <label class="SnForm-label" for="fullName">Full Name</label>\n        <input class="SnForm-control" id="fullName" type="text" name="fullName">\n    </div>\n    <div class="SnForm-item">\n        <label class="SnForm-label" for="adress">Adress</label>\n        <input class="SnForm-control" id="adress" type="text" name="adress">\n    </div>\n    <div class="SnForm-item">\n        <label class="SnForm-label" for="gender">Gender</label>\n        <select class="SnForm-control" id="gender" name="gender">\n            <option value="man">Man</option>\n            <option value="woman">Woman</option>\n        </select>\n    </div>\n    <div class="SnForm-item">\n        <label class="SnForm-label" for="message">Message</label>\n        <textarea class="SnForm-textarea" id="message" name="message" cols="3" rows="10"></textarea>\n    </div>\n</form>'
        )
            form(action="" method="post").SnForm.horizontal
                .SnForm-item.required
                    label(for="fullName").SnForm-label Full Name
                    input#fullName(type="text" name="fullName").SnForm-control
                .SnForm-item
                    label(for="adress").SnForm-label Adress
                    input#adress(type="text" name="adress").SnForm-control
                .SnForm-item
                    label(for="gender").SnForm-label Gender
                    select#gender(name="gender").SnForm-control
                        option(value="man") Man
                        option(value="woman") Woman
                .SnForm-item
                    label(for="message").SnForm-label Message
                    textarea#message(name="message" cols="3" rows="5").SnForm-control
        +codeBox(
            'Help', 
            'Form validate.', 
            '<form class="SnForm" action="" method="post">\n    <div class="SnForm-item required has-danger">\n        <label class="SnForm-label" for="item1">Item1</label>\n        <input class="SnForm-control" id="item1" type="text" name="item1">\n        <div class="SnForm-help">Help text</div>\n    </div>\n    <div class="SnForm-item has-success">\n        <label class="SnForm-label" for="item2">Item2</label>\n        <input class="SnForm-control" id="item2" type="text" name="item2">\n        <div class="SnForm-help">Help text</div>\n    </div>\n    <div class="SnForm-item">\n        <label class="SnForm-label" for="item3">Item3</label>\n        <select class="SnForm-control" id="item3" name="item3">\n            <option value="man">Man</option>\n            <option value="woman">Woman</option>\n        </select>\n        <div class="SnForm-help">Help text</div>\n    </div>\n    <div class="SnForm-item">\n        <label class="SnForm-label" for="item4">Item4</label>\n        <textarea class="SnForm-control" id="item4" name="item4" cols="3" rows="5"></textarea>\n        <div class="SnForm-help">Help text</div>\n    </div>\n</form>'
        )
            form(action="" method="post").SnForm
                .SnForm-item.required.has-danger
                    label(for="item1").SnForm-label Item1
                    input#item1(type="text" name="item1").SnForm-control
                    .SnForm-help Help text
                .SnForm-item.has-success
                    label(for="item2").SnForm-label Item2
                    input#item2(type="text" name="item2").SnForm-control
                    .SnForm-help Help text
                .SnForm-item
                    label(for="item3").SnForm-label Item3
                    select#item3(name="item3").SnForm-control
                        option(value="man") Man
                        option(value="woman") Woman
                    .SnForm-help Help text
                .SnForm-item
                    label(for="item4").SnForm-label Item4
                    textarea#item4(name="item4" cols="3" rows="5").SnForm-control
                    .SnForm-help Help text
        +codeBox(
            'Size', 
            'Input sizes.', 
            '<form class="SnForm" action="" method="post">\n    <div class="SnForm-item"><label class="SnForm-label" for="size1">Size1</label>\n        <input class="SnForm-control sm" id="size1" type="text" name="size1">\n        <div class="SnForm-help">Help text</div>\n    </div>\n    <div class="SnForm-item"><label class="SnForm-label" for="size2">Size2</label>\n        <input class="SnForm-control" id="size2" type="text" name="size2">\n        <div class="SnForm-help">Help text</div>\n    </div>\n    <div class="SnForm-item"><label class="SnForm-label" for="size3">Size3</label>\n        <input class="SnForm-control lg" id="size3" type="text" name="size3">\n        <div class="SnForm-help">Help text</div>\n    </div>\n</form>'
        )
            form(action="" method="post").SnForm
                .SnForm-item
                    label(for="size1").SnForm-label Size1
                    input#size1(type="text" name="size1").SnForm-control.sm
                    .SnForm-help Help text
                .SnForm-item
                    label(for="size2").SnForm-label Size2
                    input#size2(type="text" name="size2").SnForm-control
                    .SnForm-help Help text
                .SnForm-item
                    label(for="size3").SnForm-label Size3
                    input#size3(type="text" name="size3").SnForm-control.lg
                    .SnForm-help Help text
        +codeBox(
            'Inner', 
            'Label inner.', 
            '<form class="SnForm" action="" method="post">\n    <div class="SnForm-item inner"><label class="SnForm-label" for="size1">Size1</label>\n        <input class="SnForm-control sm" id="size1" type="text" name="size1">\n        <div class="SnForm-help">Help text</div>\n    </div>\n    <div class="SnForm-item inner"><label class="SnForm-label" for="size2">Size2</label>\n        <input class="SnForm-control" id="size2" type="text" name="size2">\n        <div class="SnForm-help">Help text</div>\n    </div>\n    <div class="SnForm-item inner"><label class="SnForm-label" for="size3">Size3</label>\n        <input class="SnForm-control lg" id="size3" type="text" name="size3">\n        <div class="SnForm-help">Help text</div>\n    </div>\n</form>'
        )
            form(action="" method="post").SnForm
                .SnForm-item.inner
                    label(for="innerSize1").SnForm-label Size1
                    .SnControl-wrapper
                        i.SnControl-prefix.icon-ticket
                        input(type="text" id="innerSize1").SnForm-control.SnControl.sm
                    .SnForm-help Help text
                .SnForm-item.inner
                    label(for="innerSize2").SnForm-label Size2
                    .SnControl-wrapper
                        i.SnControl-prefix.icon-ticket
                        input(type="text" id="innerSize2").SnForm-control.SnControl
                    .SnForm-help Help text
                .SnForm-item.inner
                    label(for="innerSize3").SnForm-label Size3
                    .SnControl-wrapper
                        i.SnControl-prefix.icon-ticket
                        input(type="text" id="innerSize3").SnForm-control.SnControl.lg
                    .SnForm-help Help text
        +codeBox(
            'Outlined', 
            'Label outlined.', 
            '<form class="SnForm" action="" method="post" _lpchecked="1">\n    <div class="SnForm-item outlined">\n        <input class="SnForm-control sm" type="text" id="outlinedSize1" placeholder=" " autocomplete="off">\n        <label class="SnForm-label sm" for="outlinedSize1">Size1</label>\n        <div class="SnForm-help">Help text</div>\n    </div>\n    <div class="SnForm-item outlined required">\n        <input class="SnForm-control" type="text" id="outlinedSize2" placeholder=" " autocomplete="off">\n        <label class="SnForm-label" for="outlinedSize2">Size2</label>\n        <div class="SnForm-help">Help text</div>\n    </div>\n    <div class="SnForm-item outlined">\n        <input class="SnForm-control lg" type="text" id="outlinedSize3" placeholder=" " autocomplete="off">\n        <label class="SnForm-label lg" for="outlinedSize3">Size3</label>\n        <div class="SnForm-help">Help text</div>\n    </div>\n</form>'
        )
            form(action="" method="post").SnForm
                .SnForm-item.outlined
                    input(type="text" id="outlinedSize1" placeholder=" ").SnForm-control.sm
                    label(for="outlinedSize1").SnForm-label.sm Size1
                    .SnForm-help Help text
                .SnForm-item.outlined.required
                    input(type="text" id="outlinedSize2" placeholder=" ").SnForm-control
                    label(for="outlinedSize2").SnForm-label Size2
                    .SnForm-help Help text
                .SnForm-item.outlined
                    input(type="text" id="outlinedSize3" placeholder=" ").SnForm-control.lg
                    label(for="outlinedSize3").SnForm-label.lg Size3
                    .SnForm-help Help text
    h2 API
    .SnTable-wrapper
        table.SnTable.DocApiTable
            thead
                tr
                    th Property
                    th Class
            tbody
                tr
                    td Form
                    td
                        code .SnForm
                tr
                    td Orientation
                    td 
                        code .horizontal
                tr
                    td Item
                    td
                        code .SnForm-item
                        code .has-success
                        code .has-danger
                        code .required
                tr
                    td Control
                    td
                        code .SnForm-control
                tr
                    td Help
                    td
                        code .SnForm-help
                tr
                    td Size
                    td
                        code .sm
                        code .lg