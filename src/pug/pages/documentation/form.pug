extends ../../config/template
append config
    -title = "Forms"
    -description = "Form is used to collect, validate, and submit the user input, usually contains various form items including checkbox, radio, input, select, and etc."
    -ogUrl = "/index.html"
    -template = 2

block main
    section.SnMb-16
        h2 Login Form
        p Normal login form which can contain more elements.
        .DocExample
            form(action="" method="post").SnForm
                .SnForm-item.required
                    label(for="userName").SnForm-label User Name
                    input#userName(type="text" name="userName" required).SnForm-input
                .SnForm-item.required
                    label(for="password").SnForm-label Password
                    .SnInput-wrapper
                        input#password(type="password" name="password" required).SnForm-input
                        .SnInput-suffix.togglePassword
                            <svg viewBox="64 64 896 896" focusable="false" class="" data-icon="eye-invisible" width="1em" height="1em" fill="currentColor" aria-hidden="true"><path d="M942.2 486.2Q889.47 375.11 816.7 305l-50.88 50.88C807.31 395.53 843.45 447.4 874.7 512 791.5 684.2 673.4 766 512 766q-72.67 0-133.87-22.38L323 798.75Q408 838 512 838q288.3 0 430.2-300.3a60.29 60.29 0 0 0 0-51.5zm-63.57-320.64L836 122.88a8 8 0 0 0-11.32 0L715.31 232.2Q624.86 186 512 186q-288.3 0-430.2 300.3a60.3 60.3 0 0 0 0 51.5q56.69 119.4 136.5 191.41L112.48 835a8 8 0 0 0 0 11.31L155.17 889a8 8 0 0 0 11.31 0l712.15-712.12a8 8 0 0 0 0-11.32zM149.3 512C232.6 339.8 350.7 258 512 258c54.54 0 104.13 9.36 149.12 28.39l-70.3 70.3a176 176 0 0 0-238.13 238.13l-83.42 83.42C223.1 637.49 183.3 582.28 149.3 512zm246.7 0a112.11 112.11 0 0 1 146.2-106.69L401.31 546.2A112 112 0 0 1 396 512z"></path><path d="M508 624c-3.46 0-6.87-.16-10.25-.47l-52.82 52.82a176.09 176.09 0 0 0 227.42-227.42l-52.82 52.82c.31 3.38.47 6.79.47 10.25a111.94 111.94 0 0 1-112 112z"></path></svg>
                .SnBtn.block.primary Login
        pre.language-html
            code= '<form class="SnForm" action="" method="post">\n    <div class="SnForm-item required">\n        <label class="SnForm-label" for="userName">User Name</label>\n        <input class="SnForm-input" id="userName" type="text" name="userName" required=""></div>\n    <div class="SnForm-item required">\n        <label class="SnForm-label" for="password">Password</label>\n        <div class="SnInput-wrapper">\n            <input class="SnForm-input" id="password" type="password" name="password" required="">\n            <div class="SnInput-suffix  togglePassword">\n                <svg viewBox="64 64 896 896" focusable="false" class="" data-icon="eye-invisible" width="1em" height="1em" fill="currentColor" aria-hidden="true">\n                    <path\n                        d="M942.2 486.2Q889.47 375.11 816.7 305l-50.88 50.88C807.31 395.53 843.45 447.4 874.7 512 791.5 684.2 673.4 766 512 766q-72.67 0-133.87-22.38L323 798.75Q408 838 512 838q288.3 0 430.2-300.3a60.29 60.29 0 0 0 0-51.5zm-63.57-320.64L836 122.88a8 8 0 0 0-11.32 0L715.31 232.2Q624.86 186 512 186q-288.3 0-430.2 300.3a60.3 60.3 0 0 0 0 51.5q56.69 119.4 136.5 191.41L112.48 835a8 8 0 0 0 0 11.31L155.17 889a8 8 0 0 0 11.31 0l712.15-712.12a8 8 0 0 0 0-11.32zM149.3 512C232.6 339.8 350.7 258 512 258c54.54 0 104.13 9.36 149.12 28.39l-70.3 70.3a176 176 0 0 0-238.13 238.13l-83.42 83.42C223.1 637.49 183.3 582.28 149.3 512zm246.7 0a112.11 112.11 0 0 1 146.2-106.69L401.31 546.2A112 112 0 0 1 396 512z">\n                    </path>\n                    <path\n                        d="M508 624c-3.46 0-6.87-.16-10.25-.47l-52.82 52.82a176.09 176.09 0 0 0 227.42-227.42l-52.82 52.82c.31 3.38.47 6.79.47 10.25a111.94 111.94 0 0 1-112 112z">\n                    </path>\n                </svg>\n            </div>\n        </div>\n    </div>\n    <div class="SnBtn block primary">Login</div>\n</form>'
    section.SnMb-16
        h2 Registration
        p Fill in this form to create a new account for you.
        .DocExample
            form(action="" method="post").SnForm.horizontal
                .SnForm-item.required
                    label(for="fullName").SnForm-label Full Name
                    input#fullName(type="text" name="fullName").SnForm-input
                .SnForm-item
                    label(for="adress").SnForm-label Adress
                    input#adress(type="text" name="adress").SnForm-input
                .SnForm-item
                    label(for="gender").SnForm-label Gender
                    select#gender(name="gender").SnForm-select
                        option(value="man") Man
                        option(value="woman") Woman
                .SnForm-item
                    label(for="message").SnForm-label Message
                    textarea#message(name="message" cols="3" rows="10").SnForm-textarea
        pre.language-html
            code= '<form class="SnForm horizontal" action="" method="post">\n    <div class="SnForm-item required">\n        <label class="SnForm-label" for="fullName">Full Name</label>\n        <input class="SnForm-input" id="fullName" type="text" name="fullName"></div>\n    <div class="SnForm-item">\n        <label class="SnForm-label" for="adress">Adress</label>\n        <input class="SnForm-input" id="adress" type="text" name="adress"></div>\n    <div class="SnForm-item">\n        <label class="SnForm-label" for="gender">Gender</label>\n        <select class="SnForm-select" id="gender" name="gender">\n            <option value="man">Man</option>\n            <option value="woman">Woman</option>\n        </select>\n    </div>\n    <div class="SnForm-item">\n        <label class="SnForm-label" for="message">Message</label>\n        <textarea class="SnForm-textarea" id="message" name="message" cols="3" rows="10"></textarea>\n    </div>\n</form>'