extends ../../config/template
append config
    -title = "Customize Theme"
    -description = "Sedna allows you to customize our design vars css in order to meet the needs of UI diversity from business and brand, including primary color, border radius, border color, etc."
    -ogUrl = "/docs/theme.html"
    -template = 2

block main
    section.SnMb-16
        h2 Variables CSS.
        p There are some major variables below, all css variables could be found in default Variables
        .DocExample
            .SnAvatar
        pre.language-scss
            code.
                :root{
                    --snColor1Lighter: #69C0FF;
                    --snColor1Light: #40A9FF;
                    --snColor1: #1890FF;
                    --snColor1Dark: #096DD9;
                    --snColor1Darker: #0050B3;
                    --snColor1Inverse: #FFFFFF;

                    --snColor2Lighter: #ffd685;
                    --snColor2Light: #ffc757;
                    --snColor2: #faad14;
                    --snColor2Dark: #ffa600;
                    --snColor2Darker: #eb9c00;
                    --snColor2Inverse: #FFFFFF;

                    --snErrorLight: #FF4D4F;
                    --snError: #F5222D;
                    --snErrorDark: #CF1322;
                    --snErrorInverse: white;

                    --snSuccessLight: #73D13D;
                    --snSuccess: #52C41A;
                    --snSuccessDark: #389E0D;
                    --snSuccessInverse: white;

                    --snWarningLight: #FFEC3D;
                    --snWarning: #FADB14;
                    --snWarningDark: #D4B106;
                    --snWarningInverse: #3d2501;

                    --snColorBg: #EFF3F6;
                    --snColorBgAlt: #ffffff;
                    --snColorHover: #0000000d;

                    --snColorText: #262626;
                    --snColorTextAlt: #595959;

                    --snColorBorder: #DFE2E2;

                    --snColorDarkSmoother: #4f7087;
                    --snColorDarkSmooth: #3c5567;
                    --snColorDark: #2a3b47;
                    --snColorDarker: #22303a;
                    --snColorDarkest: #1a252d;
                    --snColorDarkInverse: #b6bcc0;
                }
    section.SnMb-16
        h2 Variables SCSS.
        p Scss vars
        pre.language-scss
            code.
                $max-width : 1200px !default;
                $gap : .5rem * 4 !default;  // 2rem
                $max-grid-columns : 12 !default;

                $breakpoints : (
                    s : 0,
                    m : 640px,
                    l : 1024px,
                    lg : 1024px,
                    xl : 1440px
                );
                $sizes: map-keys($breakpoints);

                $cssCore: false !default;
                $classPrefix: 'Sn' !default;
