block config
  include config

doctype html
html(lang="es")
  head
    title= titlePrefix + title
    meta(charset="utf-8")
    meta(name="viewport" content="initial-scale=1.0, width=device-width")
    meta(name="description" content= description)
    //- Estyles
    link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato:400,400i,700|Open+Sans:700")
    link(rel="shortcut icon" href="/images/icon.png")
    //- Open Graph Protocol
    meta(property="og:title" content= titlePrefix + title)
    meta(property="og:type" content="website")
    meta(property="og:description" content= description)
    meta(property="og:url" content= ogUrl)
    meta(property="og:image" content="/assets/img/edgrid-poster.jpg")
    meta(property="og:site_name" content="EDteam")
    meta(property="og:locale" content="es_PE")
    meta(property="og:locale:alternate" content="es_CO")
    meta(property="og:locale:alternate" content="es_MX")
    meta(property="og:locale:alternate" content="es_DO")
    meta(property="og:locale:alternate" content="es_BO")
    //- Twitter Cards
    meta(property="twitter:card" content="summary_large_image")
    meta(property="twitter:title" content= titlePrefix + title)
    meta(property="twitter:site" content="@EDteamLat")
    meta(property="twitter:description" content=description)
    meta(name="theme-color" content="#007BDF")

    link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700&display=swap")
    link(rel="stylesheet", href="/fonts/styles.css")
  body(itemscope itemtype="http://schema.org/WebPage")
    .Site#Site
      .Site-header
        include ../includes/header
      .Site-main
        if template === 1
          block main
        else if template === 2
          .Main.SnContainer
            .Main-sidebar
              include ../includes/docsMenu
            .Main-content
              block main
        else
      .Site-footer
        include ../includes/footer